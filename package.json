  "dependencies": {
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0"
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "karma": "^1.7.1",
